<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCalendar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="pulldowntitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="mainspaceview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="background">@color/white</item>
    </style>
    <style name="submoduletitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="backupmodulelandrspaceview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.15</item>
        <item name="backgroundColor">@color/white</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--未被选中时下划线的颜色-->
        <item name="colorControlNormal">#8FA4EF</item>
<!--        &lt;!&ndash;输入框的左内边框&ndash;&gt;-->
<!--        <item name="android:paddingLeft">90px</item>-->
<!--        &lt;!&ndash;文本的颜色&ndash;&gt;-->
<!--        <item name="android:textColor">#000</item>-->
        <!--被选中时下划线的颜色-->
        <item name="colorControlActivated">#FFFFFF</item>
    </style>
    <style name="MyEditText2" parent="Theme.AppCompat.Light">
        <!--未被选中时下划线的颜色-->
        <item name="colorControlNormal">@color/transparent</item>
        <!--被选中时下划线的颜色-->
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="LinearAllFutureWeather">
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <!--        <item name="background">@drawable/topline</item>-->
    </style>
    <style name="LinerFutureWeather">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="background">@drawable/cardborder_light_blue</item>
    </style>
    <style name="TextFutureWeather3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:text">0℃</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/transparent</item>
    </style>
    <style name="backupstarttimeandendtime">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="fullyearcalendarhgap">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="fullyearcalendarvgap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
    </style>
</resources>